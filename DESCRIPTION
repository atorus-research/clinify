Package: clinify
Type: Package
Title: Styling for Clinical Outputs
Version: 0.1.0
Authors@R: c(
    person("Ross", "Didenko", email = "rostyslav.didenko@atorusresearch.com", role = c("aut")),
    person("Yevhenii", "Boiko", email = "yevhenii.boiko@atorusresearch.com", role = c("aut")),
